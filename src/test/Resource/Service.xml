<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper>

  <resultMap id="BaseResultMap" type="com.gofreeteam.model.FtService" >
    <id column="id" property="id" jdbcType="INTEGER" />
    <result column="name" property="name" jdbcType="VARCHAR" />
    <result column="intro" property="intro" jdbcType="VARCHAR" />
    <result column="price" property="price" jdbcType="VARCHAR" />
    <result column="img" property="img" jdbcType="VARCHAR" />
    <result column="content" property="content" jdbcType="VARCHAR" />
    <result column="lastUpdateTime" property="lastUpdateTime" jdbcType="VARCHAR" />
    <result column="examine" property="examine" jdbcType="VARCHAR" />
  </resultMap>

  <sql id="Base_Column_List" >
    id,name,intro,price,PROLOG as img,content,lastupdatetime,examine,examine_score,IS_RECOMMEND as recommend
  </sql>


  <select id="selectByPrimaryKey">
    select 
    <include refid="Base_Column_List" />
    from ftservice
    where id = #{id,jdbcType=INTEGER}
  </select>

  <select id="findByName" resultMap="BaseResultMap">
    select
    <include refid="Base_Column_List" />
    from ftservice
    where name LIKE '%${name}%'

  </select>


  <select id="list" resultMap="BaseResultMap">
    select
    <include refid="Base_Column_List" />
    from ftservice
    <if test='"0".equals(examine)' >
      where
      (examine is null or examine='0')
    </if>
    <if test='"1".equals(examine)' >
      where
      examine='1'
    </if>
    <if test='"2".equals(examine)' >
      where
      examine='2'
    </if>
  </select>


  <select id="recommend" >
    UPDATE ftservice
    set IS_RECOMMEND= #{flag}
    WHERE id = #{id}
  </select>

  <select id="examine" >
      UPDATE ftservice
      set EXAMINE= #{flag}
      WHERE id = #{id}
  </select>


  <select id="examineScore" >
      UPDATE ftservice
      set EXAMINE_SCORE= #{flag}
      WHERE id = #{id}
  </select>

</mapper>
